<Window x:Class="PowerCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор степени числа" Height="250" Width="400">
    <Grid>
        <Label Content="Число:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="NumberInput" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,10,0,0" Width="100"/>

        <Label Content="Степень:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox x:Name="PowerInput" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,50,0,0" Width="100"/>

        <Button Content="Вычислить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="100" Click="CalculateButton_Click"/>

        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Width="300" TextWrapping="Wrap"/>
    </Grid>
</Window>
